<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <AssemblyName>NServiceBus.NLog</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DocumentationFile>$(ProjectDir)bin\$(Configuration)\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>CS0419</NoWarn>
    <UpdateAssemblyInfo>true</UpdateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="NLog" Version="4.3.11" />
    <PackageReference Include="NServiceBus" Version="6.3.3" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0012" />
    <PackageReference Include="NuGetPackager" Version="0.6.3" />
    <None Include="..\..\packaging\nuget\NServiceBus.NLog.nuspec">
      <Link>NServiceBus.NLog.nuspec</Link>
    </None>
  </ItemGroup>
  <Target Name="BeforeBuildPackages" BeforeTargets="BuildPackages">
    <MakeDir Directories="$(SolutionDir)..\binaries" />
    <ItemGroup>
      <Files Include="$(TargetDir)$(TargetName).*" />
    </ItemGroup>
    <Copy SourceFiles="@(Files)" DestinationFolder="$(SolutionDir)..\binaries" />
  </Target>
</Project>